{
    "family": "cicd_test_task",
    "taskRoleArn": "GitHub",
    "executionRoleArn": "GitHub",
    "networkMode": "awsvpc",
    "cpu": "256",
    "memory": "1024",
    "containerDefinitions": [
        {
            "name": "cicd_test_container",
            "image": "ruby:2.5",
            "cpu": "256",
            "memory": "1024",
            "links": [
            ],
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                },
                {
                    "containerPort": 443,
                    "hostPort": 443,
                    "protocol": "tcp"
                },
                {
                    "containerPort": 3000,
                    "hostPort": 3000,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "command": [
                "rails server"
            ],
            "linuxParameters": {
                "initProcessEnabled": true
            },
            "user": "luke",
            "workingDirectory": "/etc/cicd_test",
            "privileged": false,
            "readonlyRootFilesystem": true,
            "interactive": true,
            "pseudoTerminal": true,
            "dockerLabels": {
            },
            "logConfiguration": { 
                "logDriver": "awslogs",
                "options": { 
                    "awslogs-group" : "/ecs/fargate-task-definition",
                    "awslogs-region": "us-west-2",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "ulimits": [
                {
                    "name": "nice",
                    "softLimit": 500,
                    "hardLimit": 1000
                }
            ]
        }
    ],
    "volumes": [
        {
            "name": "cicd_test_volume",
            "dockerVolumeConfiguration": {
                "scope": "task",
                "autoprovision": true
            }
        }
    ],
    "requiresCompatibilities": [
        "EC2"
    ]
}
